<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tableContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="*Project Name* Task Overview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?attr/colorOnBackground" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_sort"
            android:gravity="center"
            android:textColor="?attr/colorOnBackground"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- Search bar -->
        <EditText
            android:id="@+id/etFilterSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:hint="@string/search_hint"
            android:backgroundTint="?attr/colorPrimary"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="?attr/colorOnBackground" />

        <!-- Horizontal scroll wrapper -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Table Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorSurface"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/header_Task"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/header_task"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/header_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/header_status"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/header_due_date"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/header_due_date"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/header_assigned_to"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/header_assigned_to"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/header_description"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="@string/header_description"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/header_docs"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskOverviewRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

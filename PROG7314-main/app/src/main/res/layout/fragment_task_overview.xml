<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tableContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
        android:id="@+id/txtProjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="*Project Name* Task Overview"
        android:textSize="20sp"
        android:gravity="center"/>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap on a column to sort by that column"
            android:gravity="center" />

        <EditText
            android:id="@+id/etFilterSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Type here to filter and search"
            android:backgroundTint="?attr/colorPrimary"/>

        <!-- Horizontal scroll wrapper -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Table Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CCCCCC"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/header_Task"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Task" />

                    <TextView
                        android:id="@+id/header_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Status" />

                    <TextView
                        android:id="@+id/header_due_date"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Due Date" />

                    <TextView
                        android:id="@+id/header_assigned_to"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Assigned To" />

                    <TextView
                        android:id="@+id/header_description"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Description" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Docs" />
                </LinearLayout>

                <!-- RecyclerView for rows -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskOverviewRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>